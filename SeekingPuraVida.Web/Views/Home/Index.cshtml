                        function initMap() {
                            //Map Points
                            var rancho = { lat: 9.917, lng: -83.720 };
                            //var samara = {};
                            //var manuelAntonio = {};
                            //var

                            //Initialize Map
                            var map = new google.maps.Map(document.getElementById('map'), {
                                zoom: 8,
                                center: rancho
                            });

                            //Place Markers
                            var marker = new google.maps.Marker({
                                position: rancho,
                                map: map
                            });

                            //Place Info Window
                            var iw1 = new google.maps.InfoWindow({
                                content: '<h3>Rancho Pacifico</h3>' +
                                '<a href=www.google.com </a>Our Experience at Rancho Pacifico</br>' +
                                '<a href=www.google.com </a>Our Experience at Rancho Pacifico'
                            });

                            marker.addListener('click', function () {
                                iw1.open(map, marker);
                            });
                        }
                    </script>
                    <script async defer
                            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyACDOpVp8T3GtI_gyax1YzmiRiF0m1HUT0&callback=initMap">
